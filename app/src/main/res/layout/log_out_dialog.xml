<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_grey_shadow"
    android:textAlignment="center">

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dim_16dp"
        android:text="@string/logout"
        android:textColor="@color/txt_color2"
        android:textSize="@dimen/_20ssp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="horizontal"
        android:layout_below="@+id/text"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/dialog_ok"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:background="@drawable/circle_shadow"
            android:layout_marginEnd="@dimen/dim_48dp"
            android:src="@drawable/ic_check_solid"
            android:padding="@dimen/_15sdp"
            android:clickable="true"
            android:focusable="true"/>

        <ImageView
            android:id="@+id/dialog_no"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:background="@drawable/circle_shadow"
            android:layout_marginStart="@dimen/dim_48dp"
            android:src="@drawable/ic_times_solid"
            android:padding="@dimen/_15sdp"
            android:clickable="true"
            android:focusable="true"/>

    </LinearLayout>

</RelativeLayout>