<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_250dp"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="@dimen/dim_n_10dp"
        android:layout_marginStart="@dimen/dim_n_20dp"
        android:layout_marginTop="@dimen/dim_n_30dp"
        android:background="@drawable/splash_t" />

    <LinearLayout
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:paddingBottom="@dimen/_20sdp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/_230sdp"
            android:layout_height="@dimen/_230sdp"
            android:layout_marginStart="@dimen/_16sdp"
            android:src="@drawable/logo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_minus15sdp"
            android:fontFamily="@font/acmes"
            android:text="@string/app_name"
            android:textColor="@color/txt_color2"
            android:textSize="@dimen/_29ssp" />

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_220dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dim_n_20dp"
        android:layout_marginEnd="@dimen/dim_n_30dp"
        android:layout_marginStart="@dimen/dim_n_30dp"
        android:background="@drawable/splash_b" />

</RelativeLayout>