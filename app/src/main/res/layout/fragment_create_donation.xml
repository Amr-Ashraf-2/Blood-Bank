<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/create_donation_fragment_ll_sub_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/create_donation_fragment_til_name"
                style="@style/text_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dim_16dp"
                app:errorTextAppearance="@style/error_appearance">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/create_donation_fragment_tiet_name"
                    style="@style/text_input_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:hint="@string/name" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/create_donation_fragment_til_age"
                style="@style/text_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:errorTextAppearance="@style/error_appearance">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/create_donation_fragment_tiet_age"
                    style="@style/text_input_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/age"
                    android:inputType="number" />

            </com.google.android.material.textfield.TextInputLayout>

            <RelativeLayout
                android:id="@+id/create_donation_fragment_rl_blood_types"
                style="@style/text_input"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/create_donation_fragment_sp_blood_types"
                    style="@style/spinner3"
                    android:gravity="center_horizontal"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="@dimen/_7sdp"
                    android:layout_toStartOf="@+id/create_donation_fragment_img_v_blood_types"
                    />

                <ImageView
                    android:id="@+id/create_donation_fragment_img_v_blood_types"
                    android:layout_alignParentEnd="true"
                    android:layout_width="@dimen/_18sdp"
                    android:layout_height="match_parent"
                    android:src="@drawable/register_spinner_arow"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/_5sdp"
                    />

            </RelativeLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/create_donation_fragment_til_bags_number"
                style="@style/text_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:errorTextAppearance="@style/error_appearance">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/create_donation_fragment_tiet_bags_number"
                    style="@style/text_input_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/bags_number"
                    android:inputType="numberSigned" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/create_donation_fragment_til_hospital_name"
                style="@style/text_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:errorTextAppearance="@style/error_appearance">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/create_donation_fragment_tiethospital_name"
                    style="@style/text_input_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/hospital_name" />

            </com.google.android.material.textfield.TextInputLayout>

            <RelativeLayout
                android:id="@+id/create_donation_fragment_rl_hospital_address"
                style="@style/text_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/create_donation_fragment_til_hospital_address"
                    style="@style/text_input_without_margin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toStartOf="@id/create_donation_fragment_iv_select_location"
                    app:errorTextAppearance="@style/error_appearance">


                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/create_donation_fragment_tiet_hospital_address"
                        style="@style/text_input_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/hospital_addresse" />

                </com.google.android.material.textfield.TextInputLayout>

                <ImageView
                    android:id="@+id/create_donation_fragment_iv_select_location"
                    android:layout_width="@dimen/dim_32dp"
                    android:layout_height="@dimen/dim_32dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/dim_16dp"
                    android:layout_marginStart="@dimen/dim_8dp"
                    android:src="@drawable/ic_compass_solid" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dim_4dp"
                android:layout_marginBottom="@dimen/dim_4dp">

                <RelativeLayout
                    android:id="@+id/create_donation_fragment_rl_government"
                    style="@style/text_input7"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_45sdp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    >

                    <Spinner
                        android:id="@+id/create_donation_fragment_sp_government"
                        style="@style/spinner3"
                        android:gravity="center_horizontal"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="@dimen/_7sdp"
                        android:layout_toStartOf="@+id/create_donation_fragment_img_v_government"
                        />

                    <ImageView
                        android:id="@+id/create_donation_fragment_img_v_government"
                        android:layout_alignParentEnd="true"
                        android:layout_width="@dimen/_18sdp"
                        android:layout_height="match_parent"
                        android:src="@drawable/register_spinner_arow"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/_5sdp"
                        />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/create_donation_fragment_rl_city_container"
                    style="@style/text_input7"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_45sdp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:visibility="gone">

                    <Spinner
                        android:id="@+id/create_donation_fragment_sp_city"
                        style="@style/spinner3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_horizontal"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="@dimen/_7sdp"
                        android:layout_toStartOf="@+id/create_donation_fragment_img_v_city"
                        />

                    <ImageView
                        android:id="@+id/create_donation_fragment_img_v_city"
                        android:layout_alignParentEnd="true"
                        android:layout_width="@dimen/_18sdp"
                        android:layout_height="match_parent"
                        android:src="@drawable/register_spinner_arow"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/_5sdp"
                        />

                </RelativeLayout>

            </LinearLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/create_donation_fragment_til_phone"
                style="@style/text_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:errorTextAppearance="@style/error_appearance">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/create_donation_fragment_tiet_phone"
                    style="@style/text_input_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/phone"
                    android:maxLength="11"
                    android:inputType="phone" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/create_donation_fragment_til_note"
                style="@style/text_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/dim_100dp"
                app:errorTextAppearance="@style/error_appearance">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/create_donation_fragment_tiet_note"
                    style="@style/text_input_edit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="@string/note" />

            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/create_donation_fragment_btn_send"
                style="@style/btn3"
                android:background="@drawable/shape_et_2"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/white"
                android:text="@string/send" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>