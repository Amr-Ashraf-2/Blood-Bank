<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        >

        <LinearLayout
            android:id="@+id/contact_us_fragment_rel_sub_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/_15sdp"
            >

            <TextView
                android:id="@+id/contact_us_fragment_tv_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/phone"
                android:textSize="@dimen/_20ssp"
                android:textColor="@color/txt_color"
                />

            <View
                android:id="@+id/contact_us_fragment_iv_view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_2sdp"
                android:background="@color/list_view_seperator_line_color"
                />

            <LinearLayout
                android:id="@+id/fragment_contact_us_ll_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:clickable="true"
                android:focusable="true"
                android:background="?android:attr/selectableItemBackground"
                android:paddingTop="@dimen/_10sdp"
                android:paddingBottom="@dimen/_10sdp">

                <ImageView
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_mobile_solid"
                    />

                <TextView
                    android:id="@+id/contact_us_fragment_tv_phone_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/txt_color3"
                    android:textSize="@dimen/_15ssp"
                    android:layout_marginStart="@dimen/_5sdp"
                    />

            </LinearLayout>

            <TextView
                android:id="@+id/contact_us_fragment_tv_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/email"
                android:textSize="@dimen/_20sdp"
                android:textColor="@color/txt_color"
                />

            <View
                android:id="@+id/contact_us_fragment_iv_view2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_2sdp"
                android:background="@color/list_view_seperator_line_color"
                />

            <LinearLayout
                android:id="@+id/fragment_contact_us_ll_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:clickable="true"
                android:focusable="true"
                android:background="?android:attr/selectableItemBackground"
                android:paddingTop="@dimen/_10sdp"
                android:paddingBottom="@dimen/_10sdp">

                <ImageView
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_email_solid"
                    />

                <TextView
                    android:id="@+id/contact_us_fragment_tv_email_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/txt_color3"
                    android:textSize="@dimen/_15ssp"
                    android:layout_marginStart="@dimen/_10sdp"
                    />

            </LinearLayout>

            <View
                android:id="@+id/contact_us_fragment_iv_view3"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_2sdp"
                android:background="@color/list_view_seperator_line_color"
                />

            <TableLayout
                android:id="@+id/contact_us_fragment_grid_social"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                >

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <ImageView
                        android:id="@+id/contact_us_fragment_rel_facebook"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:scaleType="fitXY"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?android:attr/selectableItemBackground"
                        android:src="@drawable/contact_us_facebook"
                        />

                    <ImageView
                        android:id="@+id/contact_us_fragment_rel_instagram"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:scaleType="fitXY"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?android:attr/selectableItemBackground"
                        android:src="@drawable/contact_us_instegram"
                        />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <ImageView
                        android:id="@+id/contact_us_fragment_rel_twitter"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:scaleType="fitXY"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?android:attr/selectableItemBackground"
                        android:src="@drawable/contact_us_twitter"
                        />

                    <ImageView
                        android:id="@+id/contact_us_fragment_rel_youtube"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:scaleType="fitXY"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?android:attr/selectableItemBackground"
                        android:src="@drawable/contact_us_youtube"
                        />

                </TableRow>

            </TableLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/contact_us_fragment_til_message_title"
                style="@style/text_input_orange"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:padding="@dimen/dim_4dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/contact_us_fragment_tiet_message_title"
                    style="@style/text_input_edit2"
                    android:hint="@string/message_title"
                    android:inputType="text"
                    android:paddingTop="@dimen/_4sdp"
                    android:paddingBottom="@dimen/_7sdp"
                    android:textColorHint="@color/notification_alert_color"
                    android:textColor="@color/notification_alert_color"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/contact_us_fragment_til_message_content"
                style="@style/text_input_orange"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/_2sdp"
                android:layout_marginTop="@dimen/_7sdp"
                android:padding="@dimen/dim_4dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/contact_us_fragment_tiet_message_content"
                    style="@style/text_input_edit2"
                    android:layout_height="wrap_content"
                    android:lines="5"
                    android:gravity="start"
                    android:paddingTop="@dimen/_4sdp"
                    android:inputType="textMultiLine"
                    android:paddingBottom="@dimen/_10sdp"
                    android:textColorHint="@color/notification_alert_color"
                    android:textColor="@color/notification_alert_color"
                    android:hint="@string/message_content" />

            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/contact_us_fragment_btn_send"
                style="@style/btn2"
                android:layout_width="@dimen/_160sdp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/send"
                android:textSize="@dimen/_15ssp"
                android:layout_marginTop="@dimen/_10sdp"
                />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>

