<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/login">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:id="@+id/forget_password_fragment_rel_sub_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/forget_password_fragment_img_v_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_logo_white"
                android:layout_above="@+id/forget_password_fragment_til_phone"
                android:layout_alignParentTop="true"
                android:layout_marginTop="@dimen/_35sdp"
                android:layout_marginBottom="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:layout_marginStart="@dimen/_15sdp"
                />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/forget_password_fragment_til_phone"
                style="@style/text_input2"
                android:layout_centerInParent="true"
                android:layout_marginTop="@dimen/dim_4dp"
                android:layout_marginBottom="@dimen/dim_4dp"
                android:layout_marginStart="@dimen/_12sdp"
                android:layout_marginEnd="@dimen/_12sdp"
                android:padding="@dimen/dim_4dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/forget_password_fragment_tiet_phone"
                    style="@style/text_input_edit2"
                    android:hint="@string/phone"
                    android:maxLength="11"
                    android:layout_marginStart="@dimen/dim_8dp"
                    android:layout_marginEnd="@dimen/dim_8dp"
                    android:inputType="phone"/>

            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/forget_password_fragment_btn_send"
                style="@style/btn3"
                android:layout_below="@id/forget_password_fragment_til_phone"
                android:layout_marginTop="@dimen/_20sdp"
                android:text="@string/send" />

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>